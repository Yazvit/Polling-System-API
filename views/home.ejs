<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/home.css">
    
    <title>Polling System API</title>

    
</head>

<body>

    <h2 class="heading">Pooling System API</h2>

    <div class="container">

        <div class="content">

            <!-- ************  Create a question ********** -->

            <div class="methods">
                <h4>1. Create a question</h4>
                <div class="btn-container">
                    <button class="btn btn1" onclick="showMessage('questions')"><a href="#">POST</a></button>
                    <a href="http://localhost:8001/questions/create" class="link"> http://localhost:8001/questions/create </a>
                </div>
            </div>

            <!-- ************ Add optionss to a question ********** -->
        
            <div class="methods">
                <h4>2. Add options to a question</h4>
                <div class="btn-container">
                    <button class="btn btn2" onclick="showMessage('options')"><a href="#">POST</a></button>
                    <a href="http://localhost:8001/questions/id/options/add_options" class="link"> http://localhost:8001/questions/id/options/add_options </a>
                </div>
            </div>

             <!-- ************ Add a vote to an option of question ********** -->
            
             <div class="methods">
                <h4>3. Add a vote to an option of question</h4>
                    <div class="btn-container">
                        <button class="btn btn3" onclick="showMessage('vote')"><a href="http://localhost:8001/options/id/add_vote">POST</a></button>
                        <a href="http://localhost:8001/options/id/add_vote" class="link"> http://localhost:8001/options/id/add_vote </a>
                    </div>
            </div>

            <!-- ************  Delete a question ********** -->

            <div class="methods">
                <h4>4. Delete a question</h4>
                    <div class="btn-container">
                        <button class="btn btn4" onclick="showMessage('deleteQuestion')"><a href="http://localhost:8001/questions/id/delete">DELETE</a></button>
                        <a href="http://localhost:8001/questions/id/delete" class="link">http://localhost:8001/questions/id/delete</a>
                    </div>
            </div>

            <!-- ************  Delete an option ********** -->

            <div class="methods">
                <h4>5. Delete an option</h4>
                    <div class="btn-container">
                        <button class="btn btn5" onclick="showMessage('deleteOption')"><a href="http://localhost:8001/options/id/delete">DELETE</a></button>
                        <a href="http://localhost:8001/options/id/delete" class="link"> http://localhost:8001/options/id/delete </a>
                    </div>
            </div>

            <!-- View all question with itâ€™s options and all the votes ********** -->

            <div class="methods">
                <h4>6. View all question & options & votes </h4>
                <div class="btn-container">
                    <button class="btn btn6"><a href="http://localhost:8001/questions/listAll">GET</a></button>
                    <a href="http://localhost:8001/questions/listAll" class="link"> http://localhost:8001/questions/listAll </a>
                </div>
            </div>

    </div>
    
    <script>
        // Add your JavaScript code here
        function showMessage(messageType, button) {
            if (messageType === 'questions') {
                alert("Hurray! You're almost there. Go to Postman and submit your question.");
                button.style.color = "black";
            } else if (messageType === 'options') {
                alert("Hurray! You're almost there. Go and post your options following the question id.");
            } else  if (messageType === 'vote') {
                alert("Hurray! You're almost there. Go and vote for the options following the question.");
            } else if (messageType === 'deleteOption') {
                alert("Hurray! You're almost there. Go and delete the option.");
            } else if (messageType === 'deleteQuestion') {
                alert("Hurray! You're almost there. Go and delete the question.");
            }
        }
    </script>
   
  
</body>

</html>